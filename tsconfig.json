{
  "target": "es5",
  "strict": true,
  "module": "es2015",
  "moduleResolution": "node",
  "compilerOptions": {
    "lib": [
        "dom",
        "es2015",
        "scripthost",
        "es2015.promise"
    ],
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true    
  },  
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "**/*.spec.ts"
  ]
}